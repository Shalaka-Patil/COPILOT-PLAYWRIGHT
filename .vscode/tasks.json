{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Playwright Tests",
      "type": "shell",
      "command": "npm",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Tests (Headed)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:headed"],
      "group": "test"
    },
    {
      "label": "Run Tests (UI Mode)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:ui"],
      "group": "test"
    }
  ]
}
